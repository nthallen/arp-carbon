Altimeter {
  HBox { +-; Title: Altimeter; -+ };
  Altitude: (MRA_Alt,6) m;
  Stale:    (MRA_Stale,3);
}

Status {
  HBox { +-; Title: Status; -+ };
  >{ (flttime,9) }<;
  MFCtr: (MFCtr,5);
}

{ HBox { [Rovers]; |; [Panel]; |; [Inverter]; |; {
    [Cool];
    [Altimeter];
    VGlue 0+1;
    [Status] }
  }
}
