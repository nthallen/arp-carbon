  IRv2T: (IRv2T,6) C;
  IRv3T: (IRv3T,6) C;
  IRv4T: (IRv4T,6) C;
  IRv5T: (IRv5T,6) C;
  ISG1T: (ISG1T,6) C;
  ISG2T: (ISG2T,6) C;
  ISk1T: (ISk1T,6) C;
  ISk2T: (ISk2T,6) C;
  ISk3T: (ISk3T,6) C;
}

Panel {
  HBox { +-; Title: Panel; -+ };
  Init: (PP_Init,1);
  KeyPr: (PP_Key_Pressed,3);
  WQ_NE: (PP_WQ_NonEmpty,3);
  WQ_Full: (PP_WQ_Full,3);
  LKWrEn:  (PP_LKWrEn,3);
  Purge_Req: (PP_BAT_Purge_Req,3);
  Purge_LED: (PP_BAT_Purge_LED,3);
  Land_Req:  (PP_Land_Req,3);
  Land_LED:  (PP_Land_LED,3);
}

Cool {
  HBox { +-; Title: Coolant; -+ };
  Pump:   (CoolPump_DS,3);
  Divert: (CoolDivert_DS,3);
  WPmpT:  (WPmpT,6) C;
  WTnkT:  (WTnkT,6) C;
  CoolT:  (CoolT,6) C;
  CoolP:  (CoolP,6) psig;
}

Inverter {
  HBox { +-; Title: Inverter; -+ };
  Arm:     (InverterArm_DS,3);
  Cmd:     (InvCmdS,3);
  Power:   (InvPwrS,3);
  Fail:    (InvFailS,4);
  Failed:  (InvFailedS,4);
  CmdErr:  (InvCmdErrS,4);
  CommErr: (InvErrS,4);
  Vin:     (InvQury1,3);
  Load:    (InvQury4,3);
  QURY5:   (InvQury5,3);
  QURY6:   (InvQury6,3);
  QURY7:   (InvQury7,3);
