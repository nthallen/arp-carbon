<package> BS2cdf
<include> <stdlib.h>
<include> "BS2cdf.h"

<opts> "P:S:A"
<sort>
	-P <data path>
	-S <setup file> Defaults to <data path>/BAT_setup.txt
	-A Extract data even when data is missing

<switch>
  case 'P':
    data_path = optarg;
    break;
  case 'S':
    setup_path = optarg;
    break;
  case 'A':
    all_recs = 1;
    break;

